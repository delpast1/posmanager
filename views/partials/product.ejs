
<div class="container dashboard-content" >
        <form action="/admin/product/update-product/" method="POST" class="form-default" role="form">
            <div class="form-group col-sm-12">
                <label class="label label-default" for="_id">_id</label>
                <input type="text" class="form-control" name="_id" value="<%= product._id %>" readonly>
            </div>
            <div class="form-group col-sm-6">
                <label class="label label-default" for="SKU">SKU</label>
                <input type="text" class="form-control" name="SKU" placeholder="Nhập mã SKU" value="<%= product.info.SKU %>">
            </div>
            <div class="form-group col-sm-6">
                <label class="label label-default" for="name">Tên sản phẩm</label>
                <input type="text" class="form-control" name="name" placeholder="Nhập tên sản phẩm" value="<%= product.info.name %>">
            </div>
            <div class="form-group col-sm-6">
                <label class="label label-default" for="barcode">Barcode</label>
                <input type="text" class="form-control" name="barcode" placeholder="Nhập mã barcode" value="<%= product.info.barcode %>">
            </div>
            <div class="form-group col-sm-6">
                <label class="label label-default" for="retailPrice">Giá bán</label>
                <input type="text" class="form-control" name="retailPrice" placeholder="Nhập giá bán" value="<%= product.info.retailPrice %>">
            </div>
            <div class="form-group col-sm-6">
                <label class="label label-default" for="costPrice">Giá vốn</label>
                <input type="text" class="form-control" name="costPrice" placeholder="Nhập giá vốn" value="<%= product.info.costPrice %>">
            </div>
            <div class="form-group col-sm-6">
                <label class="label label-default" for="unitOfMeasure">Đơn vị tính</label>
                <input type="text" class="form-control" name="unitOfMeasure" placeholder="Nhập đơn vị tính" value="<%= product.info.unitOfMeasure %>">
            </div>
            <div class="form-group col-sm-6">
                <label class="label label-default" for="brand">Nhãn hiệu</label>
                <input type="text" class="form-control" name="brand" placeholder="Nhập nhãn hiệu" value="<%= product.info.brand %>">
            </div>
            <div class="form-group col-sm-6">
                <label class="label label-default" for="category">Loại sản phẩm</label>
                <input type="text" class="form-control" name="category" placeholder="Nhập loại sản phẩm" value="<%= product.info.category %>">
            </div>
            <div class="form-group col-sm-6">
                <label class="label label-default" for="status">Trạng thái</label>
                <select class="form-control" name="status">
                    <% if (product.status === 'ACTIVE') {%>
                        <option selected>ACTIVE</option>
                        <option>INACTIVE</option>
                    <% } else { %>
                        <option>ACTIVE</option>
                        <option selected>INACTIVE</option>
                    <% } %>
                </select>
                <!-- <input type="text" class="form-control" name="status" placeholder="Nhập loại sản phẩm" value="<%= product.status %>"> -->
            </div>
            <div class="form-group col-sm-6">
                <label class="label label-default" for="status">Mô tả</label>
                <textarea class="form-control" rows="5" name="description"><%= product.info.description %></textarea>
            </div>
            <div class="form-group col-sm-2">
                <button type="submit" class="btn btn-primary">Lưu</button>
            </div>
            <div class="form-group col-sm-2">
                <a href="/admin/product/delete-product/<%= product._id %>" class="btn btn-warning">Xóa</a>
            </div>
    </form>
</div>

<% if (errors.length > 0) { %>
    <div class="modal show" id="errorModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick = "$('#errorModal').removeClass('show').addClass('fade');">&times;</button>
                <h4 class="modal-title">Validate!!!</h4>
            </div>
            <div class="modal-body">
                <% for(let i=0; i < errors.length; i++) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= errors[i] %>
                    </div>
                <% } %>
            </div>
            <div class="modal-footer">        
            </div>
        </div>
    </div>
<% } %>

    